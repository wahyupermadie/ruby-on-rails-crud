<div class= "container">
<% if @books.blank? %>
    <p>There is no data</p>
<% else %>
    <p>These are the current book in your system</p>
    <p>Ruby on Rails first Project</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Books</th>
            <th>Action</th>
        </tr>
    </thead>
    </tbody>
        <% @books.each do |c| %>
        <tr>
            <th><%= link_to c.title, {:action => 'show', :id => c.id} -%></th>
            <th><b> <%= link_to 'Edit', {:action => 'edit', :id => c.id} %></b>
            <%= link_to "Delete", {:action => 'delete', :id => c.id},
            :confirm => "Are you sure you want to delete this item?" %>
            </th>
        </tr>
        <% end %>
    </tbody>
</table>
<% end %>
<p><%= link_to "Add a New Book", {:action => "new" }%></p>
</div>
